generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  groupsCreated  Group[]         @relation("UserGroupsCreated")
  groupMembers   GroupMember[]
  expensesPaid   Expense[]       @relation("ExpensesPaidBy")
  expenseSplits  ExpenseSplit[]  @relation("UserExpenseSplits")
}

model Group {
  id            Int           @id @default(autoincrement())
  name          String
  joinCode      String?       @unique
  createdBy     Int
  createdAt     DateTime      @default(now())
  members       GroupMember[]
  expenses      Expense[]     @relation("GroupExpenses")
  settlements   Settlement[]  @relation("GroupSettlements")
  createdByUser User          @relation("UserGroupsCreated", fields: [createdBy], references: [id])
}

model GroupMember {
  id       Int    @id @default(autoincrement())
  userId   Int
  groupId  Int
  role     String @default("member")
  user     User   @relation(fields: [userId], references: [id])
  group    Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model Expense {
  id          Int            @id @default(autoincrement())
  description String
  amount      Float
  paidBy      Int
  groupId     Int
  createdAt   DateTime       @default(now())
  paidByUser  User           @relation("ExpensesPaidBy", fields: [paidBy], references: [id])
  group       Group          @relation("GroupExpenses", fields: [groupId], references: [id], onDelete: Cascade)
  splits      ExpenseSplit[]
}

model ExpenseSplit {
  id         Int      @id @default(autoincrement())
  expenseId  Int
  userId     Int
  amount     Float
  expense    Expense  @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user       User     @relation("UserExpenseSplits", fields: [userId], references: [id])
}

model Settlement {
  id          Int      @id @default(autoincrement())
  groupId     Int
  paidBy      Int
  paidTo      Int
  amount      Float
  createdAt   DateTime @default(now())
  group       Group    @relation("GroupSettlements", fields: [groupId], references: [id], onDelete: Cascade)
}
